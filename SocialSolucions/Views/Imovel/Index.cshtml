@model List<ImovelModel>



@{
    ViewData["Title"] = "Index";
}

<div class="text-center">
    <h1 class="display-4">Imobiliaria Social Solutions</h1>
    <p>Sistema de Controle de Imovéis</p>
</div>
<table class="table table-success table-striped">
    <h1 class="display-4">Imóveis</h1>
    <div>
        <p class="nav-item">
            <a class="btn btn-primary" asp-area="" asp-controller="Imovel" asp-action="Criar">Novo Imóvel</a>
        </p>
    </div>
    <thead>
        <tr>
            <th scope="col">Identificação Imóvel</th>
            <th scope="col">Status Imóvel</th>
            <th scope="col">Tipo de Negócio</th>
            <th scope="col">Valor do imóvel</th>
            <th scope="col">Descrição</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (ImovelModel imovel in Model)
            {
                <tr>
                    <th scope="row">@imovel.Id</th>
                    <th scope="row">@imovel.Status</th>
                    <td>@imovel.TipodeNegócio</td>
                    <td>@imovel.Valor</td>
                    <td>@imovel.Descricao</td>
                    <td>
                        <div class="btn-group" role="group" aria-label="Basic example">
                            <a class="btn btn-primary" role="button" asp-controller="Imovel" asp-action="Editar">Editar</a>
                            <a class="btn btn-danger" role="button" asp-controller="Imovel" asp-action="Excluir">Excluir</a>
                        </div>
                    </td>

                </tr>
            }
        }
        <tr>
            <th scope="row">1</th>
            <th scope="row">Inativo</th>
            <td>Aluguel</td>
            <td>R$1.520.000,00</td>
            <td>Imóvel de luxo</td>
            <td>
                <div class="btn-group" role="group" aria-label="Basic example">
                    <a class="btn btn-primary" role="button" asp-controller="Imovel" asp-action="Editar">Editar</a>
                    <a class="btn btn-danger" role="button" asp-controller="Imovel" asp-action="Excluir">Excluir</a>
                </div>
            </td>
        </tr>
        <tr>
            <th scope="row">2</th>
            <th scope="row">Inativo</th>
            <td>Aluguel</td>
            <td>R$520.000,00</td>
            <td>Imóvel médio padrão</td>
            <td>
                <div class="btn-group" role="group" aria-label="Basic example">
                    <a class="btn btn-primary" role="button" asp-controller="Imovel" asp-action="Editar">Editar</a>
                    <a class="btn btn-danger" role="button" asp-controller="Imovel" asp-action="Excluir">Excluir</a>
                </div>
            </td>
        </tr>
    </tbody>
</table>
<a class="btn btn-primary" asp-area="" asp-controller="Cliente" asp-action="Index">Voltar</a>