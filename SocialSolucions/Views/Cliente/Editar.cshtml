@model ClienteModel
@{
    ViewData["Title"] = "Editar";
}

<div class="text-center">
    <h1 class="display-4">Editar Cliente</h1>
    <p>Sistema de Controle de Imovéis</p>
</div>
<form asp-controller="Cliente" asp-action="Editar" method="post">
    <input type ="hidden" asp-for="Id" />

    <select class="form-select form-select-lg mb-3" aria-label=".form-select-lg example">
        <option selected>Cliente Ativo</option>
        <option value="1">Ativo</option>
        <option value="2">Inativo</option>
    </select>
    <div class="mb-3">
        <label for="exampleInputPassword1" class="form-label">Nome</label>
        <input type="text" asp-for="Nome" class="form-control" id="exampleInputPassword1">
    </div>
    <div class="mb-3">
        <label for="exampleInputPassword1" class="form-label">Email</label>
        <input type="text" asp-for="Email" class="form-control" id="exampleInputPassword1">
    </div>
    <div class="mb-3">
        <label for="exampleInputPassword1" class="form-label">CPF</label>
        <input type="text" asp-for="CPF" class="form-control" id="exampleInputPassword1">
    </div>
    <a type="submit" class="btn btn-primary btn-block" asp-controller="Cliente" asp-action="Index">Voltar</a>
    <button type="submit" class="btn btn-primary btn-block">Atualizar</button>
</form>